<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.zezutom</groupId>
    <artifactId>spring-series-jan2014-02</artifactId>
    <packaging>jar</packaging>
    <version>${project.version}</version>
    <name>02 Lazily loaded beans</name>
    <parent>
        <groupId>org.zezutom</groupId>
        <artifactId>spring-series-jan2014</artifactId>
        <version>${project.version}</version>
    </parent>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-remote-resources-plugin</artifactId>
                <version>${resources.plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <configuration>
                            <resourceBundles>
                                <resourceBundle>org.zezutom:spring-series-jan2014-shared:${project.version}</resourceBundle>
                            </resourceBundles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
